    <script type="text/javascript">
        function FormSub() {
            $("#form1").submit();
        }
        function FormReset() {
            $("#uname").val("");
            $("#upwd").val("");
            $("#companyname").val("");
            $("#file1").val("");
            $("#file2").val("");
            $("#email").val("");
            $("#callnum").val("");
            $("#add").val("");
            $("#qq").val("");
        }
        function CheckForm() {
            if ($("#uname").val() == '') {
                alert('用户名不能为空');
                return false;
            }
            if ($("#upwd").val() == '') {
                alert('密码不能为空');
                return false;
            }
            if ($("#companyname").val() == '') {
                alert('企业名称不能为空');
                return false;
            }
            if ($("#file1").val() == '') {
                alert('证件一的附件未上传');
                return false;
            }
            if ($("#file2").val() == '') {
                alert('证件二的附件未上传');
                return false;
            }
            if ($("#add").val() == '') {
                alert('企业地址不能为空');
                return false;
            }
            if ($("#email").val() != '') {
                var reg = /\w+([-+.]\w+)*@@\w+([-.]\w+)*\.\w+([-.]\w+)*/;
                if (reg.test($("#email").val()) == false) {
                    alert("email地址不合法,请重填");
                    $("#email").val("");
                    return false;
                }
             }
            if ($("#callnum").val() == '') {
                alert('联系号码不能为空');
                return false;
            }
            if ($("#callnum").val() != '') {
                //var reg2 = /^[0-9]*[1-9][0-9]*$/;
                var reg2 = /^((0\d{2,3}-\d{7,8})|(0\d{2,3}\d{7,8})|(\d{7,8})|(1[3584]\d{9}))$/;
                if (reg2.test($("#callnum").val()) == false) {
                    alert("联系号不合法,请重填");
                    $("#callnum").val("");
                    return false;
                }
            }
            if($("#file1").val()==""){
                alert("证书附件不能为空")
                return false;
            }
            if ($("#file2").val() == "") {
                alert("证书附件不能为空")
                return false;
            }
            if ($("#qq").val() != '') {
                var reg3 = /[1-9][0-9]{4,}/;
                if (reg3.test($("#qq").val()) == false) {
                    alert("qq号不合法,请重填");
                    $("#qq").val("");
                    return false;
                }
            }
            if ($("#IC1").val()== $("#IC2").val()) {
                alert('证件一与证件二的类型不能相同');
                return false;
            }
            return true;
        }
        $(document).ready(function () {
            Commonuploadfiy('../Common/UploadHandler.ashx', 'fileQueue', '*.jpg', 'file3', 'file1','pop1')
            Commonuploadfiy('../Common/UploadHandler.ashx', 'fileQueue1', '*.jpg', 'file4', 'file2', 'pop2')
        })
        $(function () {
            $("#file5").click(function () {
                $("#pop1").show();
            })
            $("#file6").click(function () {
                $("#pop2").show();
            })
            $("#closeingupoad1").click(function () {
                $("#pop1").hide();
            })
            $("#closeingupoad2").click(function () {
                $("#pop2").hide();
            })
        })
    </script>
    <style type="text/css">
        div.popUpload
        {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 380px;
            padding: 10px 20px 20px 40px;
            margin: -40px 0 0 -220px;
            z-index: 1000;
            background: #fff;
            border: 1px solid #d6d6d6;
            -webkit-box-shadow: 0 0 5px rgba(0,0,0,0.3);
            -moz-box-shadow: 0 0 5px rgba(0,0,0,0.3);
            -o-box-shadow: 0 0 5px rgba(0,0,0,0.3);
            box-shadow: 0 0 5px rgba(0,0,0,0.3);
            display:none;
        }
        div.popUpload img.img-close
        {
            position: absolute;
            top: 5px;
            width: 18px;
            height: auto;
            right: 5px;
            cursor: pointer;
            }
    </style>
</head>
