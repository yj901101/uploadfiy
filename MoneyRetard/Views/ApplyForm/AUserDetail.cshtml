    <script type="text/javascript">
        $(function () {
            $("#Area").val('@usermodel.Area');
            $("#busType").val('@usermodel.UserType');
            $("#modify").click(Domodify);
            $("#reset").click(Reset);
            $("#FisrtPage").click(Jump);
        });
        function Jump() {
            window.parent.location = "/ApplyForm/Index";
         }
        function Domodify() {
            if ($("#uname").val() == '') {
                alert('用户名不能为空');
                return false;
            }
            if ($("#pwd").val() == '') {
                alert('密码不能为空');
                return false;
            }
            if ($("#companyname").val() == '') {
                alert('企业名称不能为空');
                return false;
            }
            if ($("#callnum").val() == '') {
                alert('联系号码不能为空');
                return false;
            }
            if ($("#callnum").val() != '') {
                var reg2 = /^((0\d{2,3}-\d{7,8})|(0\d{2,3}\d{7,8})|(\d{7,8})|(1[3584]\d{9}))$/;
                if (reg2.test($("#callnum").val()) == false) {
                    alert("联系号不合法,请重填");
                    $("#callnum").val("");
                    return false;
                }
            }
            if ($("#add").val() == '') {
                alert('企业地址不能为空');
                return false;
            }
            if ($("#email").val() != '') {
                var reg = /\w+([-+.]\w+)*@@\w+([-.]\w+)*\.\w+([-.]\w+)*/;
                if (reg.test($("#email").val()) == false) {
                    alert("email地址不合法,请重填");
                    $("#email").val('');
                    return false;
                }
            }
            if ($("#qq").val() != '') {
                var reg3 = /[1-9][0-9]{4,}/;
                if (reg3.test($("#qq").val()) == false) {
                    alert("qq号不合法,请重填");
                    $("#qq").val("");
                    return false;
                }
            }
            var data = $("#f1").serialize();
            $.post("/ApplyForm/AUserModify", data, function (jsobj) {
                alert(jsobj.msg);
                window.location.reload();
            }, "json");
        }
        function Reset(){
            $("#Area").val('@usermodel.Area');
            $("#busType").val('@usermodel.UserType');
            $("#uname").val('@usermodel.UserName');
            $("#pwd").val('@usermodel.Pwd');
            $("#companyname").val('@usermodel.UserRealName');
            $("#email").val('@usermodel.Email');
            $("#callnum").val('@usermodel.Phone');
            $("#add").val('@usermodel.Adress');
            $("#qq").val('@usermodel.QQ');
        }
        $(document).ready(function () {
            Commonuploadfiy('../Common/UploadHandler.ashx', 'fileQueue', '*.jpg', 'file3', 'file1', 'pop1')
            Commonuploadfiy('../Common/UploadHandler.ashx', 'fileQueue1', '*.jpg', 'file4', 'file2', 'pop2')
            Commonuploadfiy('../Common/UploadHandler.ashx', 'fileQueue2', '*.jpg', 'file10', 'file11', 'pop3')
        })
        $(function () {
