@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="../../Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>
    <title>Index</title>
    <script>
        function login() {
            if ($("#user").val() == "") { alert("用户名不能为空"); return false; }
            if ($("#pwd").val() == "") { alert("密码不能为空"); return false; }
            var data = $("#from1").serialize();
            $.post("../Login/Index", data, function (jsobj) {
                switch (jsobj.statu) {
                    case "error": alert(jsobj.msg); $("#pwd").val(""); break;
                    case "success": window.location.href = "../Jump/Index"; break;
                }
            })
        }
    </script>
</head>
<body>
    <div>
        <form method="post" action="../Login/Index" id="from1">
            用户名：<input type="text" id="user" name="user"/>
            密码：<input type="password" id="pwd" name="pwd" />
            <input type="button" value="登陆" onclick="login()" />
        </form>
    </div>
</body>
</html>
